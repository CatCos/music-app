extends layout

block content
    include navbar/navbar_user.jade
    div(class="container")
        div(class="row")
        br
        div(class="row")
            div(class="col-lg-12 col-sm-12")
              div(class="panel panel-default panelStyle")
                  div(class="panel-body")
                      h2
                          strong Your Favorite Artists
                      div(class="row")
                        div(class="col-lg-12 col-sm-12")
                            table(class="table table-hover table-style")
                                thead
                                    th
                                    th Artist
                                    th
                                    tbody
                                        each favorite in favorites
                                          tr
                                            td
                                              p  #{favorite.id}
                                            td
                                              p  #{favorite.name}
                                            td
                                              p
                                                i.fa.fa-trash(aria-hidden='true', style="color: green")
